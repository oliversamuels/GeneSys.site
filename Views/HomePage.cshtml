<div class="container-fluid packages px-5 pt-4">
    <div class="row w-100 d-flex justify-content-center align-items-center">
        <div class="planText text-center">
            <h1 class="m-0 p-0">@Model?.PlanHeading</h1>
            <div class="m-auto" style="width: 70%;">
                <p class="m-0 p-0 fs-3">@Model?.PlanSubHeading</p>
            </div>
        </div>
    </div>
    <div class="row card-container px-5 pt-5">
        @if (planItems != null)
        {
            @foreach(var plan in planItems)
            {
                var content = plan.Content;
                var name = content.Value<string>("planName");
                var type = content.Value<string>("planType");
                var icon = content.Value<MediaWithCrops>("planIcon");
                var link = content.Value<Link>("planLink");
                var cost = content.Value<int>("planCost");
                var benefits = content.Value<IEnumerable<string>>("planBenefits");
                    
                if (link != null)
                {
                    <div class="col-lg-3 col-md-6 shadow ps-4 mb-5 card pt-3">
                        <div class="d-flex justify-content-start align-items-center">
                            <img class="sm me-2" src="@icon?.MediaUrl()" alt=""/>
                            <h3 class="m-0">@name <span class="title">(@type)</span></h3>
                        </div>
                        <div class="mt-3">
                            <p><span class="cost">&#8358;@cost</span><span class="month">/month</span></p>
                        </div>
                        <div class="">
                            <p>What will you get</p>
                        </div>
                        <div class="mt-0">
                            @if (benefits != null)
                            {
                                @foreach (var benefit in benefits)
                                {
                                    <div class="d-flex justify-content-start align-items-center w-100 mb-3 ms-2">
                                        <i class="bi bi-check me-3"></i>
                                        <div class="w-75">
                                            <p class="m-0 pt-2 details pb-2">@benefit</p>
                                        </div>
                                    </div>
                                }
                            }
                            <div class="text-center pe-3">
                                <a href="@link.Url" class="btn text-nowrap getst btn-primary w-50 mt-4">Dive In</a>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
    <div class="row mt-5 d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 mb-4 alp">
            <div class="row">
                @if(listOfRandomQuestions != null)
                {
                    @foreach (var question in listOfRandomQuestions)
                    {
                        var content = question.Content;
                        var ques = content.Value<string>("question");
                        var answer = content.Value<string>("answer");

                        <div class="col-12 question bg-light mb-3 ps-4 pe-5 py-4">
                            <div class="questionTitle">
                                <p class="m-0 p-0 fs-4 fw-bold">@ques</p>
                                <button class="question-btn">
                                    <span class="icon-right"><i class="bi fs-2 fw-bold bi-arrow-right-circle"></i></span>
                                    <span class="icon-down"><i class="bi fs-2 fw-bold bi-arrow-down-circle"></i></span>
                                </button>
                            </div>
                            <div class="questionText">
                                <hr>
                                <p>@answer</p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-lg-6 col-md-8 px-4 bet">
            <h3 class="ms-4 mb-4 hsss">
                @Model?.FaqHeading
            </h3>
            <div class="d-flex justify-content-center align-items-center">
                <img class="" src="@Model?.FaqImage?.Url()" alt="" width="250px"/>
            </div>
        </div>
    </div>
</div>

