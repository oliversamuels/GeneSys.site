    var mainImage = Model.Value<IEnumerable<MediaWithCrops>>("MainImage");

    
    List<BlockGridItem> listOfQuestion = new List<BlockGridItem>();
    List<BlockGridItem> listOfRandomQuestions = new List<BlockGridItem>();
    @* Array.ForEach<BlockGridModel>(questions, question => listOfQuestion.Add(question)); *@
    if(questions != null)
    {
        foreach(var question in questions)
        {
            listOfQuestion.Add(question);
        }
    }

    static List<BlockGridItem> GetRandomElements<BlockGridItem>(IEnumerable<BlockGridItem> list, int elementCount)
    {
        return list.OrderBy(x => Guid.NewGuid()).Take(elementCount).ToList();
    }

    listOfRandomQuestions = GetRandomElements(listOfQuestion, 5);
}

